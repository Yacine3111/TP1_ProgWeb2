@{
    ViewData["Title"] = "Détails";
}

@if (ViewBag.StatusCode == 404)
{
    <h1>Plat introuvable</h1>
    <a asp-controller="Plats" asp-action="Index" class="btn btn-primary">Retour à la liste</a>
}
else
{
    <h1 class="text-center">@Model.Nom</h1>
    <img src="@Url.Content($"/images/{Model.CheminImage}.jpg")" class="img-fluid" alt="Responsive image">
    <h3 class="text-center">Prix: @Model.Prix $</h3>
    <h3 class="text-center">Catégorie: @Model.Categorie </h3>
    <a asp-controller="Plats" asp-action="Index" class="btn btn-primary mt-5">Retour à la liste</a>
}

