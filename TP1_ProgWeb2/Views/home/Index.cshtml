@{
    ViewData["Title"] = "Acceuil";
    @model TP1_ProgWeb2.ViewModels.HomeIndexVM
}
<h1 class="text-center mb-5">Acceuil</h1>
<div class="container">
    <h2>Les meilleurs restaurants</h2>
    <div class="row mb-5">
        @foreach (var item in Model.restaurants)
        {
            <div class="col">

                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nom</h5>
                        <p class="card-text">Cuisine: @item.Cuisine</p>
                        <p class="card-text">Note: @item.Note</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <h2>Les plats le moins chers</h2>

    <div class="row">
        @foreach (var item in Model.plats)
        {
            @await Html.PartialAsync("~/Views/Plats/_PlatsPartial.cshtml", item)
        }
    </div>
</div>